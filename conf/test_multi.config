/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/qtlmap -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 8
  max_memory = 64.GB
  max_time = 48.h

  // Input data
  studyFile = "$baseDir/testdata/multi_test.tsv"
  outdir = "$baseDir/testdata/test_results"
  varid_rsid_map_file = "$baseDir/testdata/varid_rsid_map.tsv.gz"

  cis_window = 1000000
  mincisvariant = 5
  n_batches = 30
  is_imputed = false
  n_geno_pcs = 3
  n_pheno_pcs = 3
  run_permutation = false
}


singularity {
  enabled = true
  autoMounts = true
  cacheDir = "$baseDir/singularity_img/"
}

executor {
    name = 'slurm'
    queueSize = 30
}

process {
  executor = 'slurm'
  beforeScript = 'module load singularity'
}